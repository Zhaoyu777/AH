{% set data = notification.content %}
{% set coin_name = setting('coin.coin_name', '虚拟币') %}

{% if data.type == 'changeOk' %}
 {{ 'api.notification.cash_account.recharge'|trans({'%value%':data.value, '%coin_name%':coin_name}) }}
