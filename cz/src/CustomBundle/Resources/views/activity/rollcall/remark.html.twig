{% extends 'bootstrap-modal-layout.html.twig' %}
{% do script(['custombundle/js/activity/grade-modal/index.js']) %}

{% set modal_class= "" %}

{% block title %}
	给&nbsp;{{ user.nickname }}&nbsp;评价
{% endblock %}
{% block body %}
	<form class="form-horizontal" id="grade-modal-form" action="{{ path('rollcall_result_remark',{resultId: result.id}) }}" method="post">
    <div class="form-group">
      <label for="evaluate" class="col-sm-3 control-label">评价（可多选）：</label>
      <div class="col-sm-9">
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-info" href="javascript:;">
            <i class="sign-icon cz-icon cz-icon-jushou"></i>
            <span>积极</span>
            <i class="js-select-icon select-icon cz-icon cz-icon-sanjiaogouxuan" hidden></i>
            <input type="hidden" name='remark[]'>
          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-info" href="javascript:;">
            <i class="sign-icon cz-icon cz-icon-zengjiicon"></i>
            <span>认真努力</span>
            <i class="js-select-icon select-icon cz-icon cz-icon-sanjiaogouxuan" hidden></i>
            <input type="hidden" name='remark[]'>

          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-info" href="javascript:;">
            <i class="sign-icon cz-icon cz-icon-dianzan"></i>
            <span>回答得好</span>
            <i class="js-select-icon select-icon cz-icon cz-icon-sanjiaogouxuan" hidden></i>
            <input type="hidden" name='remark[]'>

          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-info" href="javascript:;">
            <i class="sign-icon cz-icon cz-icon-aixin"></i>
            <span>帮助他人</span>
            <i class="js-select-icon select-icon cz-icon cz-icon-sanjiaogouxuan" hidden></i>
            <input type="hidden" name='remark[]'>

          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-info" href="javascript:;">
            <i class="sign-icon cz-icon cz-icon-locallibrary"></i>
            <span>专注</span>
            <i class="js-select-icon select-icon cz-icon cz-icon-sanjiaogouxuan" hidden></i>
            <input type="hidden" name='remark[]'>

          </a>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-3 control-label">评分：</label>
      <div class="col-sm-9">
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-grade pts active" href="javascript:;">
            <span data-score="1">+ 1分</span>
          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-grade pts" href="javascript:;">
            <span data-score="2">+ 2分</span>
          </a>
        </div>
        <div class="evaluate-select">
          <a class="evaluate-info js-evaluate-grade pts" href="javascript:;">
            <span data-score="3">+ 3分</span>
          </a>
        </div>
        <input type="hidden" name='score' value="1">
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>

{% endblock %}

{% block footer %}
	<button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
  <button type="button" class="btn btn-primary" id="grade-submit-btn" data-loading-text="{{'正在评价'|trans}}">确定</button>
{% endblock %}
