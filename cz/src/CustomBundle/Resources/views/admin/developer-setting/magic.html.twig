{% extends 'admin/layout.html.twig' %}

{% block title %}Feature Magic Setting - {{ parent() }}{% endblock %}

{% set menu = 'admin_setting_message' %}

{% block content %}
<div class="page-header"><h1>Feature Magic Setting</h1></div>

{{ web_macro.flash_messages() }}

<form class="form-horizontal" method="post" novalidate>

  <div class="form-group">
    <div class="controls col-md-12">
      <textarea class="form-control" rows="10" name="setting">{{ setting }}</textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="controls col-md-12">
      <button type="submit" class="btn btn-primary">{{'form.btn.submit'|trans}}</button>
    </div>
  </div>

  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

</form>

<div class="alert alert-danger">

    <h4>{{'admin.magic_setting.need_careful_tips'|trans}}</h4>
    <ul>
      <li>{{ 'admin.magic_setting.developer_use_tips'|trans }}</li>
      <li>{{ 'admin.magic_setting.video_fingerprint'|trans }}： {% verbatim %}"video_fingerprint": "{{company}} {{truename}} {{mobile}}"{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.doc_watermark'|trans }}： {% verbatim %}"doc_watermark": "{{company}} {{truename}} {{mobile}}"{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.ppt_watermark'|trans }}： {% verbatim %}"ppt_watermark": "{{company}} {{truename}} {{mobile}}"{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.testpaper_watermark'|trans }}： {% verbatim %}"testpaper_watermark": "{{company}} {{truename}} {{mobile}}"{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.lesson_watch_limit'|trans }}： {% verbatim %}"lesson_watch_limit": true{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.buy_before_approval'|trans }}： {% verbatim %}"buy_before_approval": true{% endverbatim %}</li>
      <li>{{ 'admin.magic_setting.disable_web_crontab'|trans }}： {% verbatim %}"disable_web_crontab": 0{% endverbatim %}（{{ 'admin.magic_setting.one_for_close'|trans }}，{{ 'admin.magic_setting.zero_for_open'|trans }}）</li>
      <li>{{ 'admin.magic_setting.cloud_search'|trans }}： {% verbatim %}"cloud_search": 0{% endverbatim %}（{{ 'admin.magic_setting.one_for_open'|trans }}，{{ 'admin.magic_setting.zero_for_close'|trans }}）</li>
      <li>{{ 'admin.magic_setting.ios_buy_disable'|trans }}： {% verbatim %}"ios_buy_disable": 0{% endverbatim %}（{{ 'admin.magic_setting.one_for_close'|trans }}，{{ 'admin.magic_setting.zero_for_open'|trans }}）</li>
      <li>{{ 'admin.magic_setting.export_limit'|trans }}： {% verbatim %}"export_limit": 10000{% endverbatim %}（{{ 'admin.magic_setting.export_max_limit_tips'|trans }}）</li>
      <li>{{ 'admin.magic_setting.export_allow_count'|trans }}： {% verbatim %}"export_allow_count": 100000{% endverbatim %}（{{ 'admin.magic_setting.export_max_limit_tips'|trans }}）</li>
      <li>{{ 'admin.magic_setting.enable_org'|trans }}： {% verbatim %}"enable_org": 0{% endverbatim %}（{{ 'admin.magic_setting.zero_for_close'|trans }}，{{ 'admin.magic_setting.one_for_open'|trans }}）</li>
      <li>{{ 'admin.magic_setting.quick_pay'|trans }}： {% verbatim %}"quickpay": false{% endverbatim %}（{{ 'admin.magic_setting.false_for_close'|trans }}，{{ 'admin.magic_setting.true_for_open'|trans }}）</li>
      <li>{{ 'admin.magic_setting.uc_phpwind'|trans }}： {% verbatim %}"uc_phpwind": 0{% endverbatim %}（{{ 'admin.magic_setting.zero_for_close'|trans }}，{{ 'admin.magic_setting.one_for_open'|trans }}）</li>
      <li>{{ 'admin.magic_setting.login_limit'|trans }}： {% verbatim %}"login_limit": 0{% endverbatim %}（{{ 'admin.magic_setting.zero_for_close'|trans }}，{{ 'admin.magic_setting.one_for_open'|trans }}）</li>
      <li>是否开启worker： {% verbatim %}"open_worker": 0{% endverbatim %}（0为关闭，1为开启）</li>
    </ul>
</div>

{% endblock %}
