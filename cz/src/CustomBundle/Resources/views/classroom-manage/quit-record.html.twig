 {% extends 'classroom-manage/students.html.twig' %}

{% block title %}{{ '退出记录'|trans }} - {{ parent() }}{% endblock %}

{% set submenu = 'record' %}

{% set script_controller = 'topxiawebbundle/controller/classroom/students' %}

{% block maincontent %}
  <form class="form-inline well well-sm " action="" method="get" novalidate>
    <div class="form-group col-md-7">
      <input class="form-control " style="width:45%" type="text" placeholder="{{ '请输入学号/邮箱/手机号'|trans }}" name="keyword" value="{{ app.request.get('keyword') }}">

      <button class="btn btn-primary">{{ '搜索'|trans }}</button>
    </div>
    <div class="clearfix"></div>
  </form>
  
  <table class="table table-striped" id="quit-record-list">
    <thead>
      <tr>
        <th>{{ '学员名称'|trans }}</th>
        <th width="30%">{{ '退出原因'|trans }} </th>
        <th>{{ '退出日期'|trans }}</th>
        <th>{{ '退款状态'|trans }}</th>
        <th>{{ '退款金额'|trans }}
          <span class="glyphicon glyphicon-question-sign color-gray" id="refund-coin-tips" data-toggle="tooltip" data-placement="bottom" href="javascript:" title="" data-original-title=""></span>
          <div id="refund-coin-tips-html" style="display:none;">
            <div style="width:150px;">
              <span>{{ '仅显示通过现金购买加入的学员退款记录'|trans }}</span><br>
            </div>
          </div>
        </th>
    
      </tr>
    </thead>
    <tbody>
      {% for refund in refunds %}
        
        {% include ('classroom-manage/quit-record-tr.html.twig') %}
      {% else %}
        <tr class="empty"><td colspan="20">{{ '无学员记录'|trans }}</td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}
{% endblock %}